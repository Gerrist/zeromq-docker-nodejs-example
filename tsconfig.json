{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "es6",
      "dom"
    ],
    "module": "commonjs",
    "resolveJsonModule": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
